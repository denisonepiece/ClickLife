mixin inputPhone(variant="simple")
  if(variant=="messenger")
    div.input-phone
      input.input__field.input-phone__field.input-phone__field_messenger(type="tel" placeholder="Номер телефона")
      div.input-phone__messengers
        label.messenger-checkbox
          input(type="checkbox")
          include whatsup.svg
        label.messenger-checkbox
          input(type="checkbox")
          include viber.svg
        label.messenger-checkbox
          input(type="checkbox")
          include telegram.svg


  if(variant=="simple")
    div.input
      input.input__field.input-phone__field(type="tel" placeholder="Номер телефона")
      div.input__message


