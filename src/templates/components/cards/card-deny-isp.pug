include card-status/card-status
include card-person/card-person

div.card
  .left
    .card-title
      h4 Забрать готовые блюда из ресторана и накрыть праздничный стол
      +card-status('red', 'Исполнитель отказался, выберите другого')
      +card-status('grey', 'Бизнес задание')

    +card-person()
  .right
    .card-info
      span.card-info__price 4600 ₽
      span.card-info__respond 12 откликов
      span.card-info__date 04.08.2019
    .card-buttons
      +button('default-red', 'Выбрать исполнителя')