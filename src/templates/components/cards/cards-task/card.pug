include ../card-status/card-status
include ../card-person/card-person
include ../../tooltip/tooltip

div.card
  .left
    .card-title
      a.card-title__link(href="")
        h4 Разработать логотип
      +card-status('green', 'Вы выбраны исполнителем')
      +card-status('grey', 'Бизнес задание')

    +card-person()
  .right
    .card-info
      span.card-info__price 4600 ₽
      span.card-info__respond 12 откликов
      span.card-info__date 04.08.2019
        +tooltip('Выполнить до указанного времени')
    .card-buttons
      +button('default-grey', 'Отказаться')
      +button('default-grad', 'Принять задание', 'button-wow')