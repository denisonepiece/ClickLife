extends ../../layout/layout

include ../../components/button/button
include ../../components/feedback/feedback
include ../../components/profile-elect/profile-elect
include ../../components/input/input
include ../../components/add-phone-block/add-phone-block
include ../../components/textarea/textarea

block title
  | Clicklife — ЛК-ред.

block main
  .container
    .wrapper
      section.information
        h2.information__header Привет, Денис!
        p.information__sub Это твой личный кабинет
        form
          .information-edit
            .left
              .information-edit__photo
                label.information-edit__file-input
                  include photo.svg
                  input(type='file' id='file')

              +button('business')
            .information-edit__fields
                +input('Имя Фамилия', 'name')
                +input('Город', 'text')
                +input('Email', 'email')
                +addPhoneBlock()
                +input('Логин Skype', 'text')
                +input('Ссылка Вконтакте', 'text')
                +input('Ссылка Facebook', 'text')
                +input('Ссылка Одноклассники', 'text')

                .information-edit__buttons
                  +button('default-green', 'Сохранить')
                  +button('default-cancel', 'Отмена')
        .information-edit-about
          //На странице компании сменить заголовок на О Компании
          h5 Обо мне
          +textarea('Информация о вас')
          +button('default-green', 'Сохранить')


block modals
  include ../../components/modals/modal-elect/modal-elect
  include ../../components/modals/modal-elect/modal-elect-2
  include ../../components/modals/modal-skills/modal-skills


